---
import { MessageIcon } from "@component/MessageIcon";
import { HomeIcon } from '@component/HomeIcon';
import { CameraIcon } from '@component/CameraIcon';
import { ProfileIcon } from '@component/ProfileIcon';
---

<style lang="scss">
    @use '../../../styles/scss/variables' as *;
    @use '../../../styles/scss/mixins' as *;

    .footer__Footer{
        
        max-width: 200px;
        padding: .5em 1em .5em 1em;
        height: 1.5em;
        display: flex;
        flex-direction: column;
        align-items: start;
        justify-content: space-between;
        gap: 4rem;
        position: fixed;
        top: 4rem;
        font-size: 24px;

        a{
            color: var(--nothing-color);
        }

        @include md{
            background-color: var(--nothing-background-color);
            position: fixed;
            max-width: unset;
            top: unset;
            bottom: 0;
            left: 0;
            right: 0;
            width: unset;
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
            height: 2em;
            padding-top: .5em;
            padding-bottom: 20px;
            gap: 3em;
            z-index: 120;
            
        }
    }

    body{
        margin-bottom: 3em;
    }

</style>

<div class="footer__Footer">
    <a href="/">
        <HomeIcon />
    </a>
    <a href="/camera">
        <CameraIcon />
    </a>
    <a href="/chats">
        <MessageIcon />
    </a>
    <a href="/profile">
        <ProfileIcon />
    </a>
</div>

<script></script>