<style lang='scss'>
    @use '../../styles/scss/variables' as *;
    @use '../../styles/scss/mixins' as *;

    .threeDotsIcon{
        height: 1em;
        width: 1em;

        .threeDotsIcon__dropdown{
            height: 1em;
            width: 1em;
            position: relative;
        }

        .threeDotsIcon__Icon{
            height: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-between;

            .threeDotsIcon__dot{
                height: .25em;
                width: .25em;
                border-radius: 50%;
                background-color: currentColor;
            }
        }

        .threeDotsIcon__dropdown-content{
            display: none;
            position: absolute;
            padding: 1em;
            background-color: var(--nothing-lighter);
            width: 30vw;
            overflow: auto;
            box-shadow: 0px 0.5em 1em 0px rgba(0, 0, 0, 0.2);
            z-index: 20;
            border-radius: 1em;
            top: 1.2em;
            right: 0;

            // @include script;
        }

        &.open{

            .threeDotsIcon__dropdown-content{
                display: block;
            }
        }
        
    }
</style>

<div class='threeDotsIcon' >  
    <div class='threeDotsIcon__dropdown'>
        <div class='threeDotsIcon__Icon'>
            <div class='threeDotsIcon__dot'></div>
            <div class='threeDotsIcon__dot'></div>
            <div class='threeDotsIcon__dot'></div>
        </div>
        <div class='threeDotsIcon__dropdown-content'>
            <slot />
        </div>
    </div>
</div>

<script>
    const threeDotsIcons = document.querySelectorAll('.threeDotsIcon');
  
    threeDotsIcons.forEach((icon) => {
        icon.addEventListener('click', () => {
            icon.classList.toggle('open');
        });
    });
</script>