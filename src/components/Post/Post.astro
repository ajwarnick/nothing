---
import { BlurImage } from '@component/BlurImage';
import { Comments } from '@component/Comments';
import { HeartIcon } from '@component/HeartIcon';
import { CommentIcon } from '@component/CommentIcon';
import { ShareIcon } from '@component/ShareIcon';
import { Carousel } from '@component/Carousel';
import { StoryIcon } from '@component/StoryIcon';

import { generateDisplayname } from '@util/generateDisplayname';
import { generateUsername } from '@util/generateUsername';
import { getRandTime } from '@util/getRandTime';
import { getRandomInt } from '@util/getRandomInt';
import { generateString } from '@util/generateString';
import { getHash } from '@util/getHash'
import { buildParams } from '@util/buildParams';

const generateHashes = (num) => {
  return [...Array(num+1)].map(() => getHash());;
}

const sharePath = () => {

    const path = window.location.hostname + '/post/' + buildParams("current") // Need to build 
    return path;
}

const generateImages = () => {
  const coin = getRandomInt(1,2);
  var images;
  if (coin == 1){
    images = [getHash()];
  }else{
    images = generateHashes(getRandomInt(1,3));
  }

  return images;
}

export interface Props {
	userName?: string;
    userAvatar?: string;
    images?: Array<string>;
    likeUsers?: number;
    likeAvatars?: Array<string>;
    comments?: number;
    time?: string;
}

const {
    userName = generateUsername(getRandomInt(1,15)),
    userAvatar = getHash(),
    images = generateImages(), // if multiple this number of images 2-4
    likeUsers = getRandomInt(1,160), // between 1 and 3
    likeAvatars = generateHashes(getRandomInt(1,3)),
    comments = getRandomInt(1,4), // between 1 and 4
    time = getRandTime(),
} = Astro.props as Props
---
<style lang="scss">
    @use '../../styles/scss/variables' as *;
    @use '../../styles/scss/mixins' as *;

.bigButton{
    background-color: red;

}

.post{
    padding: 1em;
    width: calc(100% - 2em);
    max-width: 900px;
    margin: auto;

    @include sm(){
        padding: 1em 0em;
    }

    .post__header{
        height: 2em;
        margin: 1em 0;
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 1em;

        @include sm(){
            margin: 1em;
        }

        .post__header__icon{
            height: 2em;
            width: 2em;
            border-radius: 50%;
            overflow: hidden;

            .blurImage{
                width: 5em;
            }
        }
        .post__header__name{
            // flex-grow: 1;
            font-size: 2rem;
            text-align: left;

            @include script-bold();

            @include sm(){
                // color:red;
            }
        }

        .post__header__time{
            flex-grow: 1;
            font-size: 1.5rem;

            @include script;

            &:before {
                content:"\A";
                width:4px;
                height:4px;
                border-radius:50%;
                background: currentColor;
                display:inline-block;
                margin: 0 10px 0 0;
            }
        }

        .post__header__options > div,
        .post__header__options > div:after,
        .post__header__options > div:before {
            height: 0.25em;
            width: 0.25em;
            background-color: var(--nothing-light);
            border-radius: 50%;
            -webkit-transition: 0.5s;
            -o-transition: 0.5s;
            transition: 0.5s;
        }
        .post__header__options{
            z-index: 10;
            
            > div {
                position: relative;
            }

            > div:after {
                content: "";
                position: absolute;
                bottom: calc((1em / 2) - (0.25em / 2));
                left: 0;
            }

            > div:before {
                content: "";
                position: absolute;
                top: calc((1em / 2) - (0.25em / 2));
                left: 0;
            }

        }
    }
    
    .post__image{
        // border: 1px solid black;

        .post__image__icons{
            display: flex;
            flex-direction: row;
            margin: .5rem 0;
            font-size: 1.6rem;
            color: var(--nothing-lighter);
            height: 1.6em;
            gap: 1rem;
            // filter: blur(2px);

            @include sm(){
                margin: 0.5em;
                font-size: 1.5rem;
                height: 1.5rem;
            }

            .post__image__comment{
                cursor: pointer;
            }

            .post__image__share:not(:empty),
            .post__image__bookmark:not(:empty){
                margin-left: auto;
            }

            .post__image__share:empty,
            .post__image__bookmark:empty{
                display: none
            }
        }

        
    }

    .post__meta{

        @include script;

        @include sm(){
            margin: 0 1em;
        }

        .post__likes{
            display: flex;
            flex-direction: row;
            font-size: 1.5rem;
            line-height: 1rem;

            .post__likes__circle{
                height: 1em;
                width: 1em;
                border-radius: 50%;
                margin-left: -10px;
                overflow: hidden;

                .blurImage{
                    width: 4em;
                }
            }

            .post__likes__circle:empty{
                background-color: aqua;
            }


            .post__likes__number{
                padding: 0;
                margin: 0 0 0 10px;

                span{
                    @include script-bold();
                    font-size: 1.2rem;
                    line-height: 1rem;
                }
            }
        }
    }
}
</style>

<section class="post">
    <div class="post__header">
        <div class="post__header__icon">
          <StoryIcon border={false} hash={userAvatar} />
        </div>
        <div class="post__header__name">
            { userName }
        </div>
        <div class="post__header__time">
          { time }
        </div>
        <div class="post__header__options"><div></div></div>
    </div>
    <div class="post__image">
      { images.length > 1 ? (
        <Carousel show={1} withIndicator >
          {images.map((x, i) =>
            <div style="width: 100%; aspect-ratio: 4 / 3; margin-bottom:15px;" data-hash={x} >
		        <BlurImage  hash={x}/>
	        </div>
          )}
        </Carousel>
      ) : (
            <div style="width: 100%; aspect-ratio: 4 / 3; margin-bottom:15px;" data-hash={images[0]} >
		        <BlurImage hash={images[0]}/>
	        </div>
      )}
      <div class="post__image__icons">
        <HeartIcon />
        <CommentIcon />
        <ShareIcon path={'/post/' + images[0]}/>
        <div class="post__image__bookmark"></div>
      </div>
    </div>
    <div class="post__meta">
        <div class="post__likes">
          {likeAvatars.map((x,i) => 
            <div class="post__likes__circle"><StoryIcon border={false} hash={x} /></div>
          )}
          <div class="post__likes__number">Liked by <span>{"testUser.current"}</span> and <span>{likeUsers} others</span></div>
        </div>
        <Comments />
    </div>
</section>

