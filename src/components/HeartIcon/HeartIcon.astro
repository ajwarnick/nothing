---
export interface Props {
	liked?: boolean
}

const {
    liked = false
} = Astro.props as Props
---

<style lang="scss">
    @use '../../styles/scss/variables' as *;
    @use '../../styles/scss/mixins' as *;

    .post__HeartIcon{
        display: flex;
        align-items: center;
        justify-content: center;

        &.liked{
            svg path{
                stroke-width: 0;
                fill: red;
            }
        }

        svg{
            height: 1em;
            width: 1.25em;

            path{
                stroke: currentColor;
                stroke-width: 1.5;
                fill:none;
            }
        }
    }
</style>

<div class={"post__HeartIcon " + (liked ? 'liked' : '')} >
    <svg width="800px" height="800px" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M1.24264 8.24264L8 15L14.7574 8.24264C15.553 7.44699 16 6.36786 16 5.24264V5.05234C16 2.8143 14.1857 1 11.9477 1C10.7166 1 9.55233 1.55959 8.78331 2.52086L8 3.5L7.21669 2.52086C6.44767 1.55959 5.28338 1 4.05234 1C1.8143 1 0 2.8143 0 5.05234V5.24264C0 6.36786 0.44699 7.44699 1.24264 8.24264Z" fill="#000000"/>
    </svg>
</div>

<script>
    const heartIcons = document.querySelectorAll('.post__HeartIcon');
  
    heartIcons.forEach((heart) => {
        heart.addEventListener('click', () => {
            heart.classList.toggle('liked');
        });
    });
  </script>