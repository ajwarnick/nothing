<style lang="scss">
    .post{
        // background-color: red;
        border: 1px solid black;
        padding: 1em;
        width: 100%;

        .post__header{
            height: 2em;
            margin: 1em 0;
            display: flex;
            flex-direction: row;
            align-items: center;
            gap: 1em;

            .post__header__icon{
                height: 2em;
                width: 2em;
                border-radius: 50%;
                background-color: aqua;
            }
            .post__header__name{
                flex-grow: 1;
            }

            .post__header__options > div,
            .post__header__options > div:after,
            .post__header__options > div:before {
                height: 0.25em;
                width: 0.25em;
                background-color: black;
                border-radius: 50%;
                -webkit-transition: 0.5s;
                -o-transition: 0.5s;
                transition: 0.5s;
            }
            .post__header__options{
                > div {
                    position: relative;
                }

                > div:after {
                    content: "";
                    position: absolute;
                    bottom: calc((1em / 2) - (0.25em / 2));
                    left: 0;
                }

                > div:before {
                    content: "";
                    position: absolute;
                    top: calc((1em / 2) - (0.25em / 2));
                    left: 0;
                }

            }
        }
        
        .post__image{
            // border: 1px solid black;
        }

        .post__meta{
            
        }
    }
</style>