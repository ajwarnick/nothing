---
import { Icon } from 'astro-icon/components'
import App from './App';
// import { Blurhash } from "react-blurhash";

import Comment from './Comment.astro';

---

<section class="post">
    <div class="post__header">
        <div class="post__header__icon"></div>
        <div class="post__header__name">
            warnick
        </div>
        <div class="post__header__options"><div></div></div>
    </div>
    <div class="post__image">
        <img src="https://picsum.photos/900/700" alt="">
        <div>
            <div class="post__image__heart"><Icon name="heart" /></div>
            <div class="post__image__speechbubble"></div>
            <div class="post__image__share"></div>
            <div class="post__image__bookmark"></div>
        </div>
    </div>
    <div class="post__meta">
        <div class="post__likes">
            <div class="post__likes__circle"></div>
            <div class="post__likes__circle"></div>
            <div class="post__likes__circle"></div>
            <p>Liked by</p>
            <div class="post__likes__number"></div>
        </div>
        <div class="post__comments">
            <Comment />
        </div>
    </div>
    <App/>
</section>


<style lang="scss">
    [data-icon="heart"] {
        font-size: 1.5em;   
    }

    .post{
        padding: 1em;
        width: 100%;
        max-width: 900px;
        margin: auto;

        .post__header{
            height: 2em;
            margin: 1em 0;
            display: flex;
            flex-direction: row;
            align-items: center;
            gap: 1em;

            .post__header__icon{
                height: 2em;
                width: 2em;
                border-radius: 50%;
                background-color: aqua;
            }
            .post__header__name{
                flex-grow: 1;
                font-size: 2rem;
            }

            .post__header__options > div,
            .post__header__options > div:after,
            .post__header__options > div:before {
                height: 0.25em;
                width: 0.25em;
                background-color: var(--darkest);
                border-radius: 50%;
                -webkit-transition: 0.5s;
                -o-transition: 0.5s;
                transition: 0.5s;
            }
            .post__header__options{
                > div {
                    position: relative;
                }

                > div:after {
                    content: "";
                    position: absolute;
                    bottom: calc((1em / 2) - (0.25em / 2));
                    left: 0;
                }

                > div:before {
                    content: "";
                    position: absolute;
                    top: calc((1em / 2) - (0.25em / 2));
                    left: 0;
                }

            }
        }
        
        .post__image{
            // border: 1px solid black;

            .post__image__heart{

            }
        }

        .post__meta{
            .post__likes{
                display: flex;
                flex-direction: row;
            }
        }
    }
</style>