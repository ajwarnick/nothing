---
import Post from '../components/Post.astro';
import Layout from '../layouts/Layout.astro';

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout>
	<Post />
</Layout>


<style is:global>
	@font-face {
		font-family: 'flow_blockregular';
		src: url('/fonts/flowblock-regular-webfont.woff2') format('woff2'),
			url('/fonts/flowblock-regular-webfont.woff') format('woff');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}


	@font-face {
		font-family: 'redacted_scriptbold';
		src: url('/fonts/redactedscript-bold-webfont.woff2') format('woff2'),
			url('/fonts/redactedscript-bold-webfont.woff') format('woff');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}


	@font-face {
		font-family: 'redacted_scriptlight';
		src: url('/fonts/redactedscript-light-webfont.woff2') format('woff2'),
			url('/fonts/redactedscript-light-webfont.woff') format('woff');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}


	@font-face {
		font-family: 'redacted_scriptregular';
		src: url('/fonts/redactedscript-regular-webfont.woff2') format('woff2'),
			url('/fonts/redactedscript-regular-webfont.woff') format('woff');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	:root{
		--light:rgb(160, 160, 160);
		--lighter:rgb(180, 180, 180);
		--lightest:rgb(220, 220, 220);

		--dark:rgb(101, 100, 100);
		--darker:rgb(80, 80, 80);
		--darkest:rgb(40, 40, 40);

	}

	*, *::after, *::before{
		box-sizing: border-box;
	}

	html{
		background-color: var(--light);
		color: var(--lightest);
		/* font-family: "flow_blockregular", system-ui; */
		font-family: "redacted_scriptregular", system-ui;
		font-weight: 400;
		font-style: normal;
	}

	body {
		margin: 0;
		padding: 0;
	}

	img{
		display: block;
		max-width: 100%;
		height: auto;
	}

	p {
		text-wrap: pretty;
		overflow-wrap: break-word;
	}

	h1, h2, h3, h4, h5, h6 {
		text-wrap: balance;
		overflow-wrap: break-word;
	}
</style>