<Layout title="void" headerVisibility={true} footerVisibility={true}>	
	<Stories />
	<Feed />
</Layout>

<script>
	const testTrigger = document.querySelectorAll(".test__Trigger");
	const testModal = document.querySelector(".modal__Test");

	testTrigger.forEach((trigger) => {
		trigger.addEventListener("click", () => { 
			testModal.classList.remove("closed");
			document.body.classList.add('scrollFreeze');
		});
	});
</script>
